@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Admin Panel";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - Doctor Appointment System</title>

    <link rel="icon" type="image/png" href="~/images/favicon1.png" />

    <!-- Bootstrap 5 CSS (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Admin panel CSS -->
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body class="admin-body">
    <!-- TOPBAR -->
    <header class="topbar">
        <div class="topbar-inner">
            <div class="topbar-left">
                <button class="topbar-menu-toggle" id="sidebarToggleBtn" aria-label="Toggle sidebar">☰</button>

                <div class="topbar-logo">
                    <span>🏥</span>
                    <span class="topbar-logo-text">Sunshine Hospital</span>
                </div>
            </div>

            <div class="topbar-right">
                <a asp-controller="Home" asp-action="Index" class="btn-view-site">View Site</a>

                <div class="topbar-user">
                    <div class="topbar-avatar">
                        @((User?.Identity?.Name ?? "A").FirstOrDefault())
                    </div>
                    <div class="topbar-user-text">
                        <div class="topbar-user-text-name">
                            @(User?.Identity?.Name ?? "Admin User")
                        </div>
                        <div class="topbar-user-text-email">Admin Panel</div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- DASHBOARD LAYOUT -->
    <main class="dashboard-layout">
        <!-- SIDEBAR -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <div class="sidebar-title-main">HealthCare Admin</div>
                <div class="sidebar-subtitle-main">Control users, appointments &amp; revenue</div>
            </div>

            <div class="sidebar-date-wrapper">
                <div class="sidebar-date-pill">
                    Today: <span id="todaySidebarText">Loading…</span>
                </div>
            </div>

            <div class="sidebar-section-title">Overview</div>
            <ul class="sidebar-nav">
                <!-- Dashboard -->
                <li class="sidebar-item">
                    <a asp-controller="AdminDashboard" asp-action="Dashboard"
                       class="sidebar-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "sidebar-link-active" : "")">
                        <span class="sidebar-link-icon">📊</span>
                        <span>Dashboard</span>
                    </a>
                </li>

                <!-- Manage Users -->
                <li class="sidebar-item">
                    <button class="sidebar-link sidebar-submenu-toggle" type="button" id="manageUsersToggle">
                        <span class="d-flex align-items-center gap-2">
                            <span class="sidebar-link-icon">👥</span>
                            <span>Manage Users</span>
                        </span>
                        <span class="submenu-arrow">▶</span>
                    </button>
                    <ul class="sidebar-submenu" id="manageUsersSubmenu">
                        <li><a asp-controller="Admin" asp-action="Admins" class="sidebar-submenu-link">Admins</a></li>
                        <li><a asp-controller="AdminDoctor" asp-action="Doctors" class="sidebar-submenu-link">Doctors</a></li>
                        <li><a asp-controller="AdminReceptionist" asp-action="Receptionists" class="sidebar-submenu-link">Receptionists</a></li>
                        <li><a asp-controller="AdminPatient" asp-action="Patients" class="sidebar-submenu-link">Patients</a></li>
                    </ul>
                </li>

                <li class="sidebar-item">
                    <a href="#" class="sidebar-link">
                        <span class="sidebar-link-icon">🗓️</span>
                        <span>Appointments</span>
                    </a>
                </li>

                <li class="sidebar-item">
                    <a asp-controller="Specialties" asp-action="Index" class="sidebar-link">
                        <span class="sidebar-link-icon">🩺</span>
                        <span>Doctor Specialties</span>
                    </a>
                </li>

                <li class="sidebar-item">
                    <a href="#" class="sidebar-link">
                        <span class="sidebar-link-icon">💳</span>
                        <span>Payments &amp; Revenue</span>
                    </a>
                </li>
            </ul>

            <!-- My Profile -->
            <li class="sidebar-item @(ViewContext.RouteData.Values["action"]?.ToString() == "MyProfile" ? "active" : "")">
                <a asp-controller="AdminProfile" asp-action="MyProfile" class="sidebar-link">
                    <i class="fa fa-user-circle"></i>
                    <span>My Profile</span>
                </a>
            </li>

            <li class="sidebar-item">
                <a href="#" class="sidebar-link">
                    <span class="sidebar-link-icon">⚙️</span>
                    <span>System Settings</span>
                </a>
            </li>

            <!-- Logout -->
            <li class="sidebar-item">
                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    <button type="submit" class="sidebar-link" style="background:none;border:none;width:100%;text-align:left;">
                        <span class="sidebar-link-icon">🚪</span>
                        <span>Logout</span>
                    </button>
                </form>
            </li>
        </aside>

        <!-- MAIN CONTENT -->
        <section class="dashboard-main">
            @RenderBody()
        </section>
    </main>

    <!-- JS libs -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- Admin panel JS -->
    <script src="~/js/admin.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
