@using Doctor_Appointment_System.Models
@model IEnumerable<Specialty>

@{
    ViewData["Title"] = "Doctor Specialties";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="dashboard-main-inner">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="h4 mb-0">Doctor Specialties</h2>
            <small class="text-muted">Manage all medical specialties used by doctors.</small>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            + Add New Specialty
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="panel">
        <div class="panel-body">
            <div class="table-custom-wrapper table-responsive">
                <table class="table table-custom align-middle mb-0">
                    <thead>
                        <tr>
                            <th style="width:80px;">#</th>
                            <th>Specialty Name</th>
                            <th style="width:180px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted">
                                    No specialties found. Click "Add New Specialty" to create one.
                                </td>
                            </tr>
                        }
                        else
                        {
                            var i = 1;
                            foreach (var specialty in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@specialty.SpecialtyName</td>
                                    <td>
                                        <a asp-action="Edit"
                                           asp-route-id="@specialty.Id"
                                           class="btn btn-sm btn-outline-secondary me-1">
                                            Edit
                                        </a>
                                        <a asp-action="Delete"
                                           asp-route-id="@specialty.Id"
                                           class="btn btn-sm btn-outline-danger">
                                            Delete
                                        </a>
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
