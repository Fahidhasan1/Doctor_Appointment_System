@using Doctor_Appointment_System.Models
@model Specialty

@{
    ViewData["Title"] = "Add Specialty";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="dashboard-main-inner">
    <h2 class="h4 mb-3">Add New Specialty</h2>

    <div class="panel">
        <div class="panel-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="SpecialtyName" class="form-label">Specialty Name</label>
                    <input asp-for="SpecialtyName" class="form-control" />
                    <span asp-validation-for="SpecialtyName" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        ← Back to list
                    </a>
                    <button type="submit" class="btn btn-primary">
                        Save Specialty
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
